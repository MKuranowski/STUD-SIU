{
    "build": {
        "dockerfile": "Dockerfile",
        "options": ["--build-arg", "WORKSPACE_FOLDER=${containerWorkspaceFolder}"]
    },
    "containerEnv": {
        "DISPLAY": "${localEnv:DISPLAY}"
    },
    "postCreateCommand": ["sh", ".devcontainer/update_bashrc.sh"],
    "runArgs": [
        "--net",
        "host",
        "--ulimit",
        "nofile=1024:131072",
        "--memory",
        "8g"
    ]
}
